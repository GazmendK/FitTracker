<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/abgerundete_ecke_sheet"
>

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>





    <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerColor="@color/guidelines"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
    />

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:id="@+id/textFieldLayoutKcal"
            android:hint="How many caloreis"
            app:hintTextColor="@color/test"
            app:boxStrokeColor="@color/calorie_text_input"
            android:layout_margin="10dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color"
                android:id="@+id/editTextWeightKcal"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:id="@+id/textFieldLayoutCarbs"
            android:hint="How many carbs"
            app:boxStrokeColor="@color/carbs_text_input"
            app:hintTextColor="@color/carbs_text_input"

            android:layout_margin="10sp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color"

                android:id="@+id/editTextWeightCarbs"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:id="@+id/textFieldLayoutProtein"
            android:hint="How many proteins"
            app:boxStrokeColor="@color/protein_text_input"
            app:hintTextColor="@color/protein_text_input"
            android:layout_margin="10sp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color"
                android:id="@+id/editTextWeightProtein"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:id="@+id/textFieldLayoutFat"
            android:hint="How many fats"
            app:boxStrokeColor="@color/fat_text_input"
            app:hintTextColor="@color/fat_text_input"
            android:layout_margin="10sp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color"

                android:id="@+id/editTextWeightfat"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            android:id="@+id/editNutritionButton"
            android:text="Submit"
            android:textColor="@color/text_color"
            android:textSize="26sp"
            app:borderWidth="1dp"
            app:rippleColor="@color/button_color"
            app:backgroundTint="@color/custom_ripple_colosr"
            app:tint="@color/text_color"/>

</LinearLayout>