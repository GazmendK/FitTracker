<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/zeile1"
        app:strokeColor="@color/guidelines"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"

        >
            <TextView
                    android:id="@+id/tvDailyOverviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight - Last 90 days"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    />
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/addWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/icon_add"
                        app:tint="@color/text_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:checkable="true"
                        android:layout_margin="0dp"
                />
            </RelativeLayout>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
                android:id="@+id/card_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerColor="@color/guidelines"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
        />

        <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/weightLineChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
        />


    </LinearLayout>




</com.google.android.material.card.MaterialCardView>


